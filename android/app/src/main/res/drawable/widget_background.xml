<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    
    <!-- Gradient background from blue to purple -->
    <gradient
        android:angle="135"
        android:startColor="#2F80ED"
        android:centerColor="#6A5FCD"
        android:endColor="#8A3FFC"
        android:type="linear" />
    
    <!-- Rounded corners -->
    <corners android:radius="16dp" />
    
    <!-- Slight padding/stroke for definition -->
    <stroke
        android:width="1dp"
        android:color="#20FFFFFF" />
    
</shape>
